<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bo.young.bonews">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BoNews"
        tools:replace="android:name">
        <activity android:name=".activities.CommentActivity" />
        <activity android:name=".activities.ProvidingPostPermissionActivity" />
        <activity android:name=".activities.PostActivity" />
        <activity android:name=".activities.UploadActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.ConfirmationActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.LoginActivity">

        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>